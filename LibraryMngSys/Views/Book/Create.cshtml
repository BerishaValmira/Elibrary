@using LibraryMngSys.Models.Category;
@model LibraryMngSys.ViewModels.AddBookCategory;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Book" asp-action="Create">
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Book.Title" class="control-label"></label>
                    <input asp-for=" @Model.Book.Title" class="form-control" />
                    <span asp-validation-for="@Model.Book.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Book.Author" class="control-label"></label>
                    <input asp-for="@Model.Book.Author" class="form-control" />
                    <span asp-validation-for="@Model.Book.Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Select Category</label>
                    <select asp-for="@Model.SelectedCategory" asp-items="Model.Categories" class="form-control"></select>
                </div>
                
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

