@model LibraryMngSys.ViewModels.EditUserViewModel

<h1>Edit User</h1>
<form method="post" asp-action="Edit" asp-controller="User">
    @Html.HiddenFor(h => Model.User.Id)
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit User</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="User.Name"></label>
            <input asp-for="User.Name" class="form-control" />
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="User.Surname"></label>
            <input asp-for="User.Surname" class="form-control" />
            <span asp-validation-for="User.Surname" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="User.Email"></label>
            <input type="email" asp-for="User.Email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>

        </div>
        <h4 class="mb-3"></h4>
        <div class ="mb-3">

            @for(int i=0; i < Model.Roles.Count(); i++)
            {
                <div class="form-check">
                    @Html.CheckBoxFor(c => Model.Roles[i].Selected)
                    @Html.HiddenFor(h => Model.Roles[i].Value)

                    @Html.LabelFor(l => Model.Roles[i].Selected, Model.Roles[i].Text, new {@class="form-check-label"})
                    @Html.HiddenFor(h => Model.Roles[i].Text)
                </div>
            }

           @* @foreach(var role in @Model.Roles)
            {
                <div class="form-check">
                    <input id="@role.Value" name="payment" type="checkbox" class="form-check-input" checked="@role.Selected" required="">
                    <label class="form-check-label" asp-for="@role.Value" >@role.Text</label>
                </div>
            } *@
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary style="width:150px">
            Back to List
        </a>
    </div>
</form>

